{
    "name": "mini-task-tracker-backend",
    "version": "1.0.0",
    "description": "Production-ready Mini Task Tracker Backend API",
    "main": "dist/server.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "start": "node dist/server.js",
        "test": "jest --forceExit --detectOpenHandles",
        "test:coverage": "jest --coverage --forceExit --detectOpenHandles",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\""
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.0",
        "helmet": "^7.1.0",
        "ioredis": "^5.4.1",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.6.0",
        "morgan": "^1.10.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/ioredis-mock": "^8.2.6",
        "@types/jest": "^29.5.12",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/morgan": "^1.9.9",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^8.3.0",
        "@typescript-eslint/parser": "^8.3.0",
        "eslint": "^9.9.0",
        "ioredis-mock": "^8.9.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^10.0.0",
        "prettier": "^3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.5.4"
    }
}
